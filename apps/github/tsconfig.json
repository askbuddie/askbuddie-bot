{
    "compilerOptions": {
        "lib": ["ES2020"],
        "target": "es2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "build",
        "rootDir": "src",
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "src/*": ["./src/*"]
        },
        "typeRoots": ["./node_modules/@types", "./src/@types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "ts-node": { "files": true }
}